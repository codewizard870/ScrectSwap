@import '../../../Vars.stylus'
.tokenButton {
  align-items: center;
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  height: 30px;
  padding: 0 0.4rem;
  width: 110px;
  border-radius: 24px;
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  cursor: pointer;
  transition: all 0.4s ease;
  outline: none; 
}

.ripple {
  position: relative;
  overflow: hidden;
  transform: translate3d(0, 0, 0);

  &:after {
    content: '';
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    background-image: radial-gradient(circle, #FF0000 10%, transparent 10.01%);
    background-repeat: no-repeat;
    background-position: 50%;
    transform: scale(10, 10);
    opacity: 0;
    transition: transform 0.5s, opacity 1s;
  }

  &:active:after {
    transform: scale(0, 0);
    opacity: 0.2;
    transition: 0s;
  }
}

.selectATokenButton {
  border-radius: 10px;
  font-family: currentFont;
  height: 44px;
  color:#5F5F6B;
  font-size: 16px;
  width: 200px;
  background: rgba(255,114,110,.10); 
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  border: none;
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;

  &:hover {
    background-color: rgba(255,114,110,.5);
  }

  &:disabled {
    color: #848484;
    // border 1px solid #848484
    background-color: transparent;
    cursor: default;
  }
}

.clearTokenButton {
  @extend .selectATokenButton;
  background-color: rgba(255, 0, 0, 0.1);
  border: 1px solid rgba(255, 0, 0, 0.9);

  &:hover {
    background-color: rgba(255, 0, 0, 0.3);
  }

  width: 300px;
}
.addCustomToken__button{
  @extend .selectATokenButton;
    background: #cccccc;
  &:hover{
    background-color: #aaaaaa;
  }

}
.tokenSelectorSearch {
  flex: 1;
  border-radius: 4px;
  border: 1px solid rgb(237, 238, 242);
  width: 100%;
  height: 46px;
  padding: 16px;
  font-size: 18px;
  outline: none;
  margin-bottom: 0.2em;

  &:focus {
    border: 1px solid rgba(255,114,110,1);
  }
  &::placeholder{
    font-family: 'Poppins',Arial, Helvetica, sans-serif;
    font-size: 16px;
    color: #5F5F6B;
  }
}

