.headerContainer{
  flex-direction:row;
  align-items: center;
  justify-content:space-between;
  margin: 0 auto;
  padding: 0px 30px;
  height: 100;
  min-height:100;
  width: 100%;
}

.howTo {
  cursor pointer
  margin-top 5px
  margin-right 80px

  svg {
    transition: all 0.3s
  }

  &:hover {
    svg {
      transform: scale(1.1)
    }

    path {
      color: rgb(3, 173, 232);
    }
  }
}

.mobileMenuButton{
  display: none;
}

.menu {
  flex-direction: row;
  align-items: center;
}

.mobileMenu {
  position: fixed;
  top: 0;
  left: -100%;
  padding: 15px;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  height: 100%;
  background: rgb(255,255,255);
  background: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(217,242,241,1) 100%);
  padding: 40px 30px;
  animation: slideMenu 0.5s forwards;

}

@keyframes slideMenu {
  from {left: -100%;}
  to {left: 0;}
}

@media screen and (max-width: 900px) {
  .howTo {
    display none
  }
}

.itemToken {

  align-items center
  cursor pointer
  position relative
  display flex

  .imgToken {
    max-height 24px
    width 24px
    margin-right 10px
  }

  > span {
    padding 10px 5px 10px 5px
    font-size 22px
    font-weight 450
    color rgb(33, 45, 94)
  }

  &.selected {
    // color #00ADE8
    // border-bottom 1px solid #00ADE8
    > span {
      border-radius 10px

      padding 10px 5px 10px 5px
      -webkit-background-size cover
      -moz-background-size cover
      -o-background-size cover
      background-size cover
      background-color #f2f3f8
    }
  }
}

@media screen and (max-width: 800px) {

  .headerContainer{
    justify-content:flex-start;
  }


  .mobileMenuButton{
    display: flex;
  }

  .menu {
    display: none;
  }

  .largeButtonContainer {
    width 50%
  }
  .swapDirectionChoice {
    width: 100%
  }
}
