@import url('https://fonts.googleapis.com/css2?family=Inter&display=swap');
.swapContainerStyle {
  z-index: 10;
  border-radius: 16px;
  background-color: white;
  padding: 2em;
  box-shadow: 2px 2px 20px 0px rgb(200,200,200,200,25);

}

.tokenInfoRow {
  border-radius: 2px; 
  height: 62px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  background-color: transparent;
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
  cursor: pointer;
  transition: all 0.8s ease;
  outline: none;
  color:  #1B1B1B;

  &:disabled {
    color: #848484;
    background-color: transparent;
    cursor: default;
  }
  
}
.tokenWrapper{
  &.dark{
    &:hover{
      background: #ff726e;
    }
  }
  &.light{
    &:hover{
      background: #ff726e;
      .CopyWithFeedback{
        &.light{
          color: #1a1a1a;
        }
      }
    }
  }
}

.tokenInfoItemsLeft {
  padding-left: 12px;
  align-items: center;
  display: flex;


}

.tokenInfoItemsRight {
  display: flex;
  padding-right: 10px;
  align-items: center;
  margin: revert;
  font-size: 16px;
  font-family: Inter,Arial, Helvetica, sans-serif;
  font-weight: normal;
  @media only screen and (max-width: 753px) {
    display: none  
  }
}
.CopyWithFeedback{
  display: flex;
  align-items: center;
  height: 100%;
  
}
input {
  text-overflow: ellipsis;
}

.withdrawLiquiditySearch {
  flex: 1;
  border-radius: 20px;
  border: 1px solid rgb(237, 238, 242);
  width: 100%;
  padding: 12px;
  font-size: 14px;
  outline: none;
  margin-bottom: 0.2em;

  &:focus {
    border: 1px solid rgba(0, 191, 255, 0.9);
  }
}
.tokenTitle{
  margin: 0;
  margin-left: 1rem;
  font-family: Poppins,Arial, Helvetica, sans-serif;
  font-size: 16px;
}
.dark{
  color: #DEDEDE;
}